<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thông tin"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:ems="5"            
            android:hint="Tên bãi gửi xe"
            android:inputType="text"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etDienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Điện thoại"
            android:inputType="text"
            android:textSize="14dp" >
        </EditText>

        <EditText
            android:id="@+id/etTongso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Tổng số chỗ"
            android:inputType="text"
            android:textSize="14dp" >
        </EditText>

        <TextView
            android:id="@+id/tvVitri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Địa chỉ"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3" >

            <EditText
                android:id="@+id/etSonha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Số nhà"
                android:inputType="text"
                android:textSize="14dp" >
            </EditText>

            <AutoCompleteTextView
                android:id="@+id/etDuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                android:focusable="false"
                android:ems="10"
                android:hint="Đường"
                android:inputType="text"
                android:textSize="14dp" >

            </AutoCompleteTextView>

            <AutoCompleteTextView
                android:id="@+id/etPhuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                android:focusable="false"
                android:hint="Phường"
                android:inputType="text"
                android:textSize="14dp" >

            </AutoCompleteTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <AutoCompleteTextView
                android:id="@+id/etQuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                android:focusable="false"
                android:ems="10"
                android:hint="Quận"
                android:inputType="text"
                android:textSize="14dp" >

            </AutoCompleteTextView>

            <AutoCompleteTextView
                android:id="@+id/etThanhpho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                android:focusable="false"
                android:ems="10"
                android:hint="Thành phố"
                android:inputType="text"
                android:textSize="14dp" >

            </AutoCompleteTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:orientation="horizontal"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/showParkingImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pictureicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ibCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_camera" />

                <ImageButton
                    android:id="@+id/ibGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_action_picture" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thêm vị trí" />
    </LinearLayout>

</ScrollView>